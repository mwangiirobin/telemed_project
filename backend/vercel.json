{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "../frontend/**", 
          "config/**",
          "controllers/**",
          "middleware/**",
          "models/**",
          "routes/**",
          "logger.js"  
        ]
      }
    }
  ],
  "routes": [
    
    {
      "src": "/(.*)", 
      "dest": "backend/app.js" 
    }
  ]
}