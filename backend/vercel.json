{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "app.js",         
          "../frontend/**", 
          "config/**",      
          "controllers/**", 
          "middleware/**",  
          "models/**",      
          "routes/**",      
          "logger.js"       
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "^/css/(.*)$",
      "headers": { "Cache-Control": "s-maxage=31536000, stale-while-revalidate" },
      "dest": "/frontend/public/css/$1"
    },
    {
      "src": "^/js/(.*)$",
      "headers": { "Cache-Control": "s-maxage=31536000, stale-while-revalidate" },
      "dest": "/frontend/public/js/$1"
    },
    {
      "src": "^/assets/(.*)$",
      "headers": { "Cache-Control": "s-maxage=31536000, stale-while-revalidate" },
      "dest": "/frontend/public/assets/$1"
    },
    { "src": "/api/:path*", "dest": "app.js" }, 
    { "src": "/:path*", "dest": "app.js" }     
  ]
}